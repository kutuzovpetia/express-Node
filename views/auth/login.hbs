<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
                <li class="tab col s6"><a  href="#register">Регистрация</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3" >
            <h2>Войти в магазин</h2>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input name="email" placeholder="Email" id="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>

                <div class="input-field">
                    <input name="password" placeholder="Пароль" id="password" type="password" class="validate" required>
                    <label for="price">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button class="btn btn-primary" type="submit">Войти</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            <h2>Регистрация</h2>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input name="name" placeholder="Имя" id="name" type="text" class="validate" required>
                    <label for="name">Имя</label>
                    <span class="helper-text" data-error="Введите имя"></span>
                </div>
                <div class="input-field">
                    <input name="email" placeholder="Email" id="remail" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>

                <div class="input-field">
                    <input name="password" placeholder="Введите пароль" id="rpassword" type="password" class="validate" required>
                    <label for="rprice">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <div class="input-field">
                    <input name="confirm" placeholder="Пароль еще раз" id="confirm" type="password" class="validate" required>
                    <label for="confirm">Пароль еще раз</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button class="btn btn-primary" type="submit">Зарегестрироваться</button>
            </form>
        </div>
    </div>
</div>
