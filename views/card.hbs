<h1>Корзина</h1>

<div id="card">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Стоимость</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>{{price}}</td>
                    <td>
                        <button
                                class="btn btn-primary js-remove"
                                data-id="{{id}}"
                                data-csrf="{{@root.csrf}}"
                        >Удалить</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <p><strong>Цена: </strong><span class="price">{{price}}</span></p>

        <form action="/orders" method="POST">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn">Сделать заказ</button>
        </form>
    {{else}}
        <h3>Корзина пустая</h3>
    {{/if}}
</div>