<h1>Редактировать курс {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input name="title" placeholder="Название" id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field">
        <input name="price" placeholder="Цена" id="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
        <input name="img" placeholder="URL" id="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите url"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="waves-effect btn btn-primary">Редактировать курс</button>
</form>

<form class="form-remove" action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="waves-effect btn red darken-4">Удалить курс</button>
</form>




